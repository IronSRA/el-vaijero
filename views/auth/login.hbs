<div class="col-lg-4 col-md-6 col-12">
  <article class="card ">
    <header>
      <div class="headerTitle">
        <i class="material-icons">
          perm_identity
        </i>
        <h2>Ingresar</h2>
      </div>
    </header>
    <div class="content">
      <div class="login-page">
        <div class="form">
          <form class="register-form" action="/auth/login" method="POST" id="form-container">
            <div class="row d-flex justify-content-center">
              <div class="col-11">
                <input id="username" class="form-control" type="text" name="username" placeholder="Nombre de usuario"
                  autofocus />
                <input id="password" class="form-control" type="password" name="password" placeholder="Contraseña" />
                {{#if message }}
                <div class="error-message">{{ message }}</div>
                {{/if}}
                <button class="btn btn-success btn-block">Ingresar</button>
                <p class="message text-center">¿Aún no tienes cuenta? <a href="/auth/signup">Crear cuenta</a></p>
              </div>
            </div>
          </form>
        </div>
      </div>
  </article>
</div>
</div>
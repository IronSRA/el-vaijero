<div class="container">
  <div class="row">
    <div class="col-12">
      <article class="card big">
        <header>
          <a href="/?city={{city}}"><i class="material-icons">
              chevron_left
            </i></a>
          <div class="headerTitle">
            <i class="material-icons">
              restaurant
            </i>
            <h2>Restaurantes</h2>
          </div>
        </header>
        <div class="content">
          <!--The div element for the map -->
          <div class="col-6">
            <div id="map"></div>
          </div>
          {{#if restaurant}}
          <div class="restaurantDetails">
            {{#each restaurant}}
            <a href="{{url}}">
              <div class="restaurantsContainer details" data-latitude="{{geometry.location.lat}}"
                data-longitude="{{geometry.location.lng}}" data-name="{{name}}" data-address="{{vicinity}}"
                data-rating="{{rating}}" data-url="{{url}}" data-photo="{{photos.[0].photo_reference}}">
                <div class="row">
                  <div class="col-6">
                    <div class="places-images">
                      <img
                        src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference={{photos.[0].photo_reference}}&key=AIzaSyCFPhuSzSAR4FzJmO0eMimZ7B_XRD4FOJY"
                        alt="{{name}}" />
                    </div>
                  </div>
                  <div class="col-6">
                    <p class="infoTitle" id="{{name}}">{{name}}</p>
                    <div class="ratings">
                      <img src="https://image.flaticon.com/icons/svg/616/616489.svg">
                      <p>{{rating}}</p>
                    </div>
                    <p>{{vicinity}}</p>
                  </div>
                </div>
              </div>
            </a>
            {{/each}}
          </div>
          {{/if}}
          {{#unless restaurant}}
          <p class="error">No tenemos datos para esa bÃºsqueda</p>
          {{/unless}}
        </div>
      </article>
    </div>
  </div>
</div>
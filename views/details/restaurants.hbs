<div class="container">
  <div class="row">
    <div class="col-12">
      <article class="card big">
        <header>
          <a href="/?city={{city}}"><i class="material-icons">
              chevron_left
            </i></a>
          <div class="headerTitle">
            <i class="material-icons">
              restaurant
            </i>
            <h2>Restaurantes</h2>
          </div>
        </header>
        <div class="content">
          <!--The div element for the map -->
          <div id="map"></div>
          {{#if restaurant}}
          {{#each restaurant}}
          <a href="{{url}}">
            <div class="restaurantsContainer" latitude="{{geometry.location.lat}}"
              longitude="{{geometry.location.lng}}">
              {{!-- <img
                src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference={{photos.[0].photo_reference}}&key=AIzaSyD44K0JK21Zr3D_vx2B1VKPoxwei7vzwfM"
                alt="{{name}}" /> --}}
              <p class="infoTitle" id="{{name}}">{{name}}</p>
              <div class="ratings">
                <img src="https://image.flaticon.com/icons/svg/616/616489.svg">
                <p>{{rating}}</p>
              </div>
              <p>{{vicinity}}</p>
              <div class="marker">
                <div id="latitude">{{geometry.location.lat}}</div>
                <div id="longitude">{{geometry.location.lng}}</div>
              </div>
            </div>
          </a>
          {{/each}}
          {{/if}}
          {{#unless restaurant}}
          <p class="error">No tenemos datos para esa b√∫squeda</p>
          {{/unless}}
        </div>
      </article>
    </div>
  </div>
</div>